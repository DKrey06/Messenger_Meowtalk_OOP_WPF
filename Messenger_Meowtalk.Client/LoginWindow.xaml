<Window x:Class="Messenger_Meowtalk.Client.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MeowTalk - Вход" 
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Лого с котиком-КАРТИНКА-->
        <StackPanel Grid.Row="0" Margin="40" HorizontalAlignment="Center">
            <Image Source="/Assets/Images/logo.png" Height="80" Width="80"/>
            <TextBlock Text="MeowTalk" 
                       FontSize="{StaticResource FontSizeXXLarge}" 
                       FontWeight="Bold"
                       Foreground="{StaticResource PrimaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!--Форма для входа-->
        <StackPanel Grid.Row="1" Margin="40,0" VerticalAlignment="Center">
            <TextBlock Text="Войти в MeowTalk" 
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource TextPrimaryBrush}"
                       Margin="0,0,0,30"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Введите имя пользователя" 
                       FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,5"/>

            <!--Поле ввода-->
            <TextBox x:Name="UsernameTextBox" 
                     Height="40" 
                     FontSize="16"
                     Padding="10"
                     Background="White"
                     BorderBrush="{StaticResource PrimaryBrush}"
                     BorderThickness="1"
                     KeyDown="UsernameTextBox_KeyDown"/>

            <Button Content="Войти" 
                    Height="45" 
                    Margin="0,20,0,0"
                    Background="{StaticResource PrimaryBrush}"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="LoginButton_Click"/>
        </StackPanel>

        <!--Нижняя панелька-->
        <Border Grid.Row="2" Background="White" Padding="20">
            <TextBlock Text="Простой и удобный мессенджер для общения" 
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>