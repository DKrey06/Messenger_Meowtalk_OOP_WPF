<Window x:Class="Messenger_Meowtalk.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MeowTalk" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Список чатов - слева-->
        <Grid Grid.Column="0" Background="{StaticResource SurfaceBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Верхняя панелька с лого-->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Assets/Images/logo.png" 
                           Height="30" Width="30" 
                           Margin="0,0,10,0"/>
                    <TextBlock Text="MeowTalk" 
                               Foreground="White" 
                               FontWeight="Bold"
                               FontSize="{StaticResource FontSizeLarge}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!--Поиск чата-->
            <Border Grid.Row="1" Padding="10" Background="{StaticResource SurfaceBrush}">
                <Grid>
                    <TextBox Height="35" 
                             Padding="10,0,35,0"
                             Background="White"
                             BorderBrush="LightGray"
                             BorderThickness="1"
                             FontSize="{StaticResource FontSizeNormal}"
                             Text="Поиск чата..."/>
                    <Image Source="/Assets/Icons/search-icon.png" 
                           Height="16" Width="16"
                           HorizontalAlignment="Right"
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!--Список чатов-->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!--Тестовые чаты, чисто для вида-->
                    <!--Чат 1 - Марина-->
                    <Border Padding="15,10" BorderBrush="LightGray" BorderThickness="0,0,0,1" Cursor="Hand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="/Assets/Images/Avatar3.jpg" 
                                   Height="45" Width="45" Margin="0,0,10,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Марина" 
                                           FontWeight="SemiBold"
                                           FontSize="{StaticResource FontSizeNormal}"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Привет! Как дела?" 
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="12:30" 
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--Чат 2 - Иван-->
                    <Border Padding="15,10" BorderBrush="LightGray" BorderThickness="0,0,0,1" Cursor="Hand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="/Assets/Images/Avatar1.jpg" 
                                   Height="45" Width="45" Margin="0,0,10,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Иван" 
                                           FontWeight="SemiBold"
                                           FontSize="{StaticResource FontSizeNormal}"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Жду твоего ответа" 
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="11:45" 
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!--Чат 3 - Алексей-->
                    <Border Padding="15,10" BorderBrush="LightGray" BorderThickness="0,0,0,1" Cursor="Hand">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="/Assets/Images/Avatar2.jpg" 
                                   Height="45" Width="45" Margin="0,0,10,0"/>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="Алексей" 
                                           FontWeight="SemiBold"
                                           FontSize="{StaticResource FontSizeNormal}"
                                           Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="Завтра встреча в 15:00" 
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                <TextBlock Text="10:20" 
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!--Нижняя панелька с текущим пользователем-->
            <Border Grid.Row="3" Background="{StaticResource PrimaryBrush}" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!--Аватар текущего пользователя-->
                    <Image Grid.Column="0" 
                           Source="/Assets/Images/default-avatar.png" 
                           Height="40" Width="40" 
                           Margin="0,0,10,0"/>

                    <!--Информация о пользователе (Антон :) )-->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Антон" 
                                   Foreground="White" 
                                   FontWeight="SemiBold"
                                   FontSize="{StaticResource FontSizeNormal}"/>
                        <TextBlock Text="#1234" 
                                   Foreground="LightGray"
                                   FontSize="{StaticResource FontSizeSmall}"/>
                    </StackPanel>

                    <!--Кнопки нового чата и настроек-->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="➕" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="{StaticResource FontSizeMedium}"
                                Cursor="Hand"
                                ToolTip="Начать новый чат"
                                Width="30" Height="30"
                                Click="NewChatButton_Click"/>

                        <Button Content="⚙️" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Foreground="White"
                                FontSize="{StaticResource FontSizeSmall}"
                                Cursor="Hand"
                                ToolTip="Настройки пользователя"
                                Width="30" Height="30"
                                Margin="5,0,0,0"
                                Click="SettingsButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!--Область сообщений - правая панелька-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Заголовок тестового чата-->
            <Border Grid.Row="0" Background="{StaticResource AccentBrush}" Padding="15" BorderBrush="LightGray" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Image Source="/Assets/Images/Avatar3.jpg" 
                               Height="40" Width="40" Margin="0,0,10,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Марина" 
                                       FontWeight="SemiBold"
                                       FontSize="{StaticResource FontSizeMedium}"
                                       Foreground="White"/>
                            <TextBlock Text="в сети" 
                                       FontSize="{StaticResource FontSizeSmall}"
                                       Foreground="LightGray"/>
                        </StackPanel>
                    </StackPanel>

                    <!--Кнопка информации о чате-->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="ⓘ" 
                                Background="Transparent" 
                                BorderThickness="0"
                                Cursor="Hand"
                                ToolTip="Информация о чате"
                                FontSize="{StaticResource FontSizeMedium}"
                                Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!--Область сообщений-->
            <Border Grid.Row="1" Background="{StaticResource ChatBackgroundBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!--Сообщение от Марины-->
                        <Border Margin="0,5" 
                                Padding="15,10" 
                                Background="{StaticResource OtherMessageBrush}"
                                CornerRadius="10"
                                HorizontalAlignment="Left"
                                MaxWidth="400">
                            <StackPanel>
                                <TextBlock Text="Привет! Как дела?" 
                                           FontSize="{StaticResource FontSizeNormal}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="12:25" 
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Right"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!--Сообщение Антон-->
                        <Border Margin="0,5" 
                                Padding="15,10" 
                                Background="{StaticResource MyMessageBrush}"
                                CornerRadius="10"
                                HorizontalAlignment="Right"
                                MaxWidth="400">
                            <StackPanel>
                                <TextBlock Text="Привет! Все отлично, спасибо! Как твои успехи?" 
                                           FontSize="{StaticResource FontSizeNormal}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="12:26" 
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Right"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!--Ответ Марины-->
                        <Border Margin="0,5" 
                                Padding="15,10" 
                                Background="{StaticResource OtherMessageBrush}"
                                CornerRadius="10"
                                HorizontalAlignment="Left"
                                MaxWidth="400">
                            <StackPanel>
                                <TextBlock Text="Тоже все хорошо! Ты видел новый проект?" 
                                           FontSize="{StaticResource FontSizeNormal}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="12:27" 
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Right"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!--Еще сообщение Марины-->
                        <Border Margin="0,5" 
                                Padding="15,10" 
                                Background="{StaticResource OtherMessageBrush}"
                                CornerRadius="10"
                                HorizontalAlignment="Left"
                                MaxWidth="400">
                            <StackPanel>
                                <TextBlock Text="Завтра покажу тебе демо версию!" 
                                           FontSize="{StaticResource FontSizeNormal}"
                                           Foreground="{StaticResource TextPrimaryBrush}"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="12:28" 
                                           FontSize="{StaticResource FontSizeSmall}"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Right"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!--Панелька для ввода сообщения-->
            <Border Grid.Row="2" Background="{StaticResource AccentBrush}" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="😊" 
                            Background="Transparent" 
                            BorderThickness="0"
                            Cursor="Hand"
                            FontSize="{StaticResource FontSizeMedium}"
                            Click="EmojiButton_Click"
                            ToolTip="Смайлики"/>

                    <TextBox Grid.Column="1" 
                             x:Name="MessageTextBox"
                             Height="40" 
                             Margin="10,0"
                             Padding="15,0"
                             FontSize="{StaticResource FontSizeNormal}"
                             Background="White"
                             BorderBrush="LightGray"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"
                             Text="Напишите сообщение..."/>

                    <Button Grid.Column="2" 
                            Content="➤" 
                            Height="40" 
                            Width="40"
                            Style="{StaticResource PrimaryButton}"
                            Click="SendButton_Click"
                            ToolTip="Отправить сообщение"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>