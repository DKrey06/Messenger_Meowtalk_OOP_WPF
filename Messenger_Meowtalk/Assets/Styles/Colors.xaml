<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Основные цвета -->

    <SolidColorBrush x:Key="PrimaryBrush" Color="#827AB5"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#6B639C"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#AC88C6"/>

    <!-- Цвета сообщений -->

    <!--Антон-->
    <SolidColorBrush x:Key="MyMessageBrush" Color="#FFE6E5"/>
    <!--Марина-->
    <SolidColorBrush x:Key="OtherMessageBrush" Color="#E1C1D1"/>
    
    <!-- Фоны -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="#C5C9E5"/>
    <SolidColorBrush x:Key="ChatBackgroundBrush" Color="#EAEDFF"/>

    <!-- Текст -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#1E293B"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#64748B"/>
    <SolidColorBrush x:Key="TextDisabledBrush" Color="#94A3B8"/>

</ResourceDictionary>